        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ans"
        android:layout_width="313dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textSize="30dp" />
</LinearLayout>